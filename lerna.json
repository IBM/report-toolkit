{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "0.6.0",
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): %s",
      "createRelease": "github"
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/**.spec.js",
    "**/*.md",
    "**/*.mdx"
  ]
}
